<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daigler.adaptivefinance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/adaptive_finance_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/adaptive_finance_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginRegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/overview_toolbar_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OverviewCustomizationActivity"
            android:label="OVERVIEW CUSTOMIZATION"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.daigler.adaptivefinance.MainActivity" />
        </activity>
        <activity android:name=".SplashScreenActivity" />
        <activity
            android:name=".ReportsActivity"
            android:label="@string/title_activity_reports"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccountsActivity"
            android:label="@string/title_activity_accounts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewAccountActivity"
            android:label="NEW ACCOUNT"
            android:parentActivityName=".AccountsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.daigler.adaptivefinance.AccountsActivity" />
        </activity>
        <activity
            android:name=".TransactionsActivity"
            android:label="@string/title_activity_transactions"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>